#9012
#내가 만든거 
import sys
input = sys.stdin.readline
N = int(input())
An = []
for _ in range(N):
    num = 0
    lst = list(input())
    for i in range(len(lst)):
        if lst[i] == "(":
            num += 1
            continue
        elif lst[i] == ")":
            num -= 1
            if num < 0:
                break
    if num == 0:
        An.append("YES")
    else :
        An.append("NO")
for i in range(len(An)):
    print(An[i])

#chatgpt
import sys
input = sys.stdin.readline

N = int(input())
for _ in range(N):
    num = 0
    valid = True
    s = input().strip()  # 입력 문자열의 앞뒤 공백 제거
    for char in s:
        if char == "(":
            num += 1
        elif char == ")":
            num -= 1
            if num < 0:  # 괄호 개수가 음수가 되면 더 볼 필요 없음
                valid = False
                break
    if valid and num == 0:  # 모두 유효하고 괄호가 균형 맞는 경우
        print("YES")
    else:
        print("NO")
# remove로 해볼려고 했었는데 확실히 remove는 찾고 리스트 전체를 땡겨야하기 때문에 시간복잡도가 높은 것 같다.
# 문자열을 맨날 리스트화 했는데 할 필요가 없다. 

## 시간 초과
import sys
input = sys.stdin.readline
from collections import deque 
N = int(input())
An = []
for _ in range(N):
    lst = deque(list(input()))
    while True:
        if lst[0] == "(":
            if ")" not in lst:
                An.append("NO")
                break
            lst.popleft()
            lst.remove(")")
            if len(lst) == 0:
                An.append("Yes")
                break
        elif lst[0] == ")":
            An.append("NO")
            break
for i in range(len(An)):
    print(An[i])
